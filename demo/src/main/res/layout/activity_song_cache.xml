<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入songId"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始缓存" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止缓存" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除缓存" />

    <Button
        android:id="@+id/clearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除所有缓存" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查缓存" />

    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放缓存" />

    <Button
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取缓存大小" />

    <TextView
        android:id="@+id/exist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10dp"
        android:text="设置缓存大小（sizeMb>50 songNum>10）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入缓存大小(MB)"
            android:textSize="12sp"
            android:textColorHint="@color/gray" />

        <EditText
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:id="@+id/edit_cache_song_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入最多歌曲数"
            android:textColorHint="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/custom_set_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置缓存大小" />


</LinearLayout>